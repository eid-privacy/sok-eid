{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.16.0/.schema/devbox.schema.json",
  "packages": {
    "texliveTeTeX": "latest",
    "texlivePackages.lipsum": {
      "version": "latest",
      "outputs": ["tex"],
    },
    "texlivePackages.todonotes": {
      "version": "latest",
      "outputs": ["tex"],
    },
  },
  "shell": {
    "scripts": {
      "pdflatex": [
        "latex main.tex",
        "bibtex main",
        "latex main.tex",
        "pdflatex main.tex",
        "echo '\n\n*** Now you can open main.pdf\n\n'",
      ],
    },
  },
  "env": {
    "TEXINPUTS": ".:$PWD/.devbox/nix/profile/default/tex/latex/lipsum:$PWD/.devbox/nix/profile/default/tex/latex/todonotes:$TEXINPUTS",
  },
}
